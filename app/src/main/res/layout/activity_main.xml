<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView
                        android:text="@string/headline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/headline" android:textAlignment="center"
                        android:layout_marginTop="8dp"/>
                <ImageView
                        android:layout_width="181dp"
                        android:layout_height="188dp" app:srcCompat="@drawable/kuva1"
                        android:id="@+id/pic" android:rotation="90" android:layout_gravity="center"
                        android:layout_marginTop="16dp"/>
                <TextView
                        android:text="@string/txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txt1"
                        android:layout_marginTop="16dp" android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"/>
                <TextView
                        android:text="@string/txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txt2"
                        android:layout_marginTop="16dp" android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"/>
                <TextView
                        android:text="@string/headline2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/headline3" android:textAlignment="center"
                        android:layout_marginTop="8dp"/>
                <TextView
                        android:text="@string/txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txt3"
                        android:layout_marginTop="16dp" android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>